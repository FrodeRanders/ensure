<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration debug="false" xmlns:log4j="http://jakarta.apache.org/log4j/">

    <!-- Appenders (writing to file in various ways) -->
    <appender name="INTERNAL" class="org.apache.log4j.RollingFileAppender">
        <param name="File" value="./ppe-tests.log"/>
        <param name="MaxFileSize" value="10MB"/>
        <param name="MaxBackupIndex" value="9"/>
        <param name="Threshold" value="debug"/>
        <!-- keep this way -->
        <layout class="org.apache.log4j.PatternLayout">
            <!--<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss.SSS} %-8p  %m%n"/>-->
            <param name="ConversionPattern" value="%m%n"/>
        </layout>
    </appender>

    <logger name="eu.ensure.ltu">
        <level value="info"/>
    </logger>

    <logger name="org.apache">
        <level value="info"/>
    </logger>

    <!-- Root logger -->
    <root>
        <level value="warn"/>
        <!-- You should explicitly enable logging on sub-loggers if needed -->
        <appender-ref ref="INTERNAL"/>
    </root>

</log4j:configuration>
