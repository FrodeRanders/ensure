<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>dicom-visualizr-parent</artifactId>
    <groupId>eu.ensure</groupId>
    <version>1.3</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>visualizr</artifactId>
  <name>DICOM visualizr</name>
  <version>1.3</version>
  <inceptionYear>2016</inceptionYear>
  <developers>
    <developer>
      <id>froran</id>
      <name>Frode Randers</name>
      <email>frode.randers@ltu.se</email>
      <organization>Lule√• University of Technology</organization>
      <organizationUrl>http://www.ltu.se</organizationUrl>
      <roles>
        <role>architect</role>
        <role>developer</role>
      </roles>
    </developer>
  </developers>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <minimizeJar>true</minimizeJar>
              <transformers>
                <transformer>
                  <mainClass>eu.ensure.visualizr.VisualizrGui</mainClass>
                </transformer>
              </transformers>
              <filters>
                <filter>
                  <artifact>org.dcm4che:dcm4che-core</artifact>
                  <excludes>
                    <exclude>**/*</exclude>
                  </excludes>
                </filter>
                <filter>
                  <artifact>eu.ensure:commons</artifact>
                  <includes>
                    <exclude>**/*</exclude>
                  </includes>
                </filter>
                <filter>
                  <artifact>org.codehaus.woodstox:wstx-asl</artifact>
                  <includes>
                    <include>**/*</include>
                  </includes>
                </filter>
                <filter>
                  <artifact>commons-logging:commons-logging</artifact>
                  <includes>
                    <include>**/*</include>
                  </includes>
                </filter>
                <filter>
                  <artifact>org.apache.ws.commons.axiom:axiom-impl</artifact>
                  <includes>
                    <include>**/*</include>
                  </includes>
                </filter>
              </filters>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>dcm4che.public</id>
      <url>http://www.dcm4che.org/maven2</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>org.apache.ws.commons.axiom</groupId>
      <artifactId>axiom-impl</artifactId>
      <version>1.2.17</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>woodstox-core-asl</artifactId>
          <groupId>org.codehaus.woodstox</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.12</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>hamcrest-core</artifactId>
          <groupId>org.hamcrest</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
</project>

